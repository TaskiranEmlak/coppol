# ========================================
# Polymarket Copy Trade Bot - Configuration
# ========================================

# Mode: paper or real
TRADING_MODE=paper

# Paper Trade Settings
PAPER_INITIAL_BALANCE=1000

# Real Trade Settings (başlangıç bakiyesi)
REAL_INITIAL_BALANCE=10

# ========================================
# Polymarket Authentication (sadece real mode)
# ========================================
# Polymarket hesabından export et:
# Settings > Export Private Key
POLYMARKET_PRIVATE_KEY=
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_PASSPHRASE=

# ========================================
# Network Settings
# ========================================
# Public Polygon RPC (ücretsiz)
POLYGON_RPC_URL=https://polygon-rpc.com/

# ========================================
# Bot Settings
# ========================================
# Whale refresh interval (saniye)
REFRESH_INTERVAL=30

# Kaç whale takip edilsin
MAX_WHALES=20

# Minimum whale skoru (0-100)
MIN_WHALE_SCORE=50

# Tek işlemde maksimum bakiye yüzdesi
MAX_TRADE_PERCENT=50

# ========================================
# Dashboard Settings
# ========================================
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=8000
